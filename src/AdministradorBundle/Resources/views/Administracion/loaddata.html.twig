		});	
	}
}


function onErrorData(){
	$('#page_loader').hide();
	$('#alert-message').html('<p>Archivo mal formateado</p>');
	$('#alert_launcher').click();
	
	
}

function onLoadData(data){
	$('#page_loader').hide();
	
	$('#alert-message').html('<p>Se cargaron '+ data[0].total + '</p>');
	$('#alert_launcher').click();
}

            
